{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 300
      }
    }
  ],
  "routes": [
    {
      "src": "/api/message",
      "dest": "/api/message.js"
    },
    {
      "src": "/api/ping",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/[...path].js"
    }
  ]
}

